@model List<TeacherVM>



<h1>All Teachers</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Father's Name</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.Name</td>
                <td>@teacher.Surname</td>
                <td>@teacher.FatherName</td>
                <td>@teacher.Salary</td>
                <td class="align-content-center">
                    <a asp-action="Delete" asp-route-Id="@teacher.Id" class="btn btn-danger m-2">Delete</a>
                    <a asp-action="Update" asp-route-Id="@teacher.Id" class="btn btn-danger m-2">Update</a>
                </td>
            </tr>

        }
    </tbody>
</table>
